<Page x:Class="HomelessDogs.Pages.AviaryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomelessDogs.Pages"
      mc:Ignorable="d" 
     d:DesignHeight="1047" d:DesignWidth="1047"
      Title="AviaryPage">

    <Grid>
            <Button x:Name="BackBTN" Height="48" Width="243" Content="НАЗАД НАХУЙ" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 50 50 0" BorderBrush="Transparent" Click="BackBTN_Click" />


    <StackPanel Orientation="Vertical"
                Margin="50 50 50 0">
            <TextBlock FontSize="48"
                   Margin="0 0 0 20"
                   FontWeight="DemiBold" Text="Вольеры в приюте:"></TextBlock>

            <ListView
x:Name="AllAnimalsLV"
  Height="470" d:ItemsSource="{d:SampleData ItemCount=5}"
  BorderBrush="Transparent"
  Background="Transparent"
  VerticalAlignment="Top" SelectionChanged="AllAnimalsLV_SelectionChanged" >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2"></UniformGrid>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <ListView.ItemTemplate>
                <DataTemplate>

                    <StackPanel Background="#F7F7F7"
                Width="420"
                Height="140"
                Margin="0 10 0 0"
                Orientation="Vertical">


                        <StackPanel Orientation="Horizontal"
                    Margin="20 10 0 0">
                            <TextBlock Text="{Binding ID}"
                   FontSize="32"
                   FontWeight="DemiBold"></TextBlock>
                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="20 10 0 0">
                            <StackPanel Orientation="Vertical">
                                    <TextBlock>Тип</TextBlock>
                                <TextBlock Text="{Binding Type}"
                           FontSize="24"
                           FontWeight="SemiBold"></TextBlock>
                            </StackPanel>
                            <StackPanel Orientation="Vertical"
                        Margin="90 0 0 0">
                                    <TextBlock>Статус</TextBlock>
                                <TextBlock Text="{Binding Status}"
                           FontSize="24"
                           FontWeight="SemiBold"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                        
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

            <ComboBox Width="440" Height="60" HorizontalAlignment="Left" Margin="0 50 0 0"/>
            <Button Content="Добавить вольер" Height="60" Width="440" FontSize="25" HorizontalAlignment="Left" Margin="0 50 0 0" BorderBrush="Transparent"/>
            <Button Content="Редактировать" Height="60" Width="440" FontSize="25" HorizontalAlignment="Left" Margin="0 20 0 0" BorderBrush="Transparent"/>
        </StackPanel>



    </Grid>
</Page>
