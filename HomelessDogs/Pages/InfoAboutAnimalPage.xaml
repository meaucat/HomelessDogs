<Page x:Class="HomelessDogs.Pages.InfoAboutAnimalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HomelessDogs.Pages"
      mc:Ignorable="d" 
           d:DesignHeight="1047" d:DesignWidth="1047"

      Title="InfoAboutAnimalPage">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="50 50 0 0">
            <TextBlock Text="Страница питомца" FontSize="48" FontWeight="SemiBold"/>

            <StackPanel Orientation="Horizontal" Margin="0 25 0 25">
                <Button x:Name="CallBTN" Height="48" Width="300" Content="Позвонить в приют" FontSize="16" BorderBrush="Transparent" Background="#FFF7F7F7" Click="CallBTN_Click" />
                <Button x:Name="BackBTN" Height="48" Width="249" Content="Вернуться назад" FontSize="16"  Margin="20 0 0 0" BorderBrush="Transparent" Background="#FFF7F7F7" Click="BackBTN_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Image Source="/Images/logo.png" Width="249" Height="174"/>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="SerialNumberTB" FontSize="32" FontWeight="DemiBold"></TextBlock>
                    <TextBlock FontSize="32" Foreground="#2DA700" FontWeight="DemiBold" Margin="30 0 0 0">Ищет хозяина</TextBlock>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                        <StackPanel Orientation="Vertical" >
                            <TextBlock FontSize="14" Foreground="#939393">Место проживания</TextBlock>
                            <TextBlock 
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Name="PointLifeTB"/>   
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="20 0 0 0">
                            <TextBlock FontSize="14" Foreground="#939393">Порода</TextBlock>
                            <TextBlock 
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Name="TypeTB"/>   
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="20 0 0 0">
                            <TextBlock FontSize="14" Foreground="#939393">Возраст</TextBlock>
                            <TextBlock 
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Name="AgeTB"/>
                        </StackPanel>

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                        <StackPanel Orientation="Vertical" >
                            <TextBlock FontSize="14" Foreground="#939393">Рост</TextBlock>
                            <TextBlock 
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Name="HeightTB"
                   />
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="20 0 0 0">
                            <TextBlock FontSize="14" Foreground="#939393">Вес</TextBlock>
                            <TextBlock 
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Name="WeightTB"/>        
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="20 0 0 0">
                            <TextBlock FontSize="14" Foreground="#939393">Пол</TextBlock>
                            <TextBlock 
                                       FontSize="24"
                                       FontWeight="SemiBold"
                                       Name="GenderTB"/>    
                        </StackPanel>
                        
                    </StackPanel>
                </StackPanel>
                
            </StackPanel>

                <TextBlock Text="Описание питомца" FontWeight="DemiBold" FontSize="32" Margin="0 40 0 0"/>
            <TextBlock x:Name="DescriptionTB" HorizontalAlignment="Left" Margin="0 25 0 0" FontSize="16"  Width="653" TextWrapping="WrapWithOverflow"/>
            
        </StackPanel>
    </Grid>
</Page>
